{
  "include": [
    "src/**/*"
  ],

  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "rootDir": "./",
    "esModuleInterop": true,
    "baseUrl": "src",
    "noErrorTruncation": true,

    "paths": {
      "@natural-selection/core": ["../packages/core/src/index.tsx"]
    }
  }
}
