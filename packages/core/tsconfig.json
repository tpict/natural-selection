{
  "include": ["./src/*"],
  "exclude": ["./node_modules"],

  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "preserveConstEnums": true,
    "target": "ES2015",
    "outDir": "lib",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "rootDir": "./src",
    "esModuleInterop": true,
    "baseUrl": "src",
    "declaration": true
  }
}
